#! /bin/bash

echo "Updating ALL"
wd=`pwd`
prefix="${wd}/../usr/local/"

dirs=`ls -d */`

# configure and make all
for app in $dirs
do
    if [ -e $app/.git ]
    then
	rm $app.log
	pushd $app > /dev/null 2>1
	git pull  > /dev/null 2>1
	ech "building in $app"
	if [ -e Makefile ]
	then
	    make install > ../$app.log 2>1
	    if [ $? -ne 0 ]
	    then
		echo "$app failed: see $app.log"
	    else
		rm ../$app.log
	    fi
	else
	    echo "No Makefile in $dir"
	fi
	popd
    else
	echo "skipping $app, not a git repository"
    fi
done
